<% include ../partials/header %>

<div class="container">
	<div class="row justify-content-center">
		<div class="col-md-12">
			<h1 class="text-center mb-4">Submit a New Campground!</h1>
		</div>
		<div class="col-xs-12 col-md-6 col-lg-4">
			<form action="/campgrounds" method="POST">
				<div class="form-group">
					<strong><label for="campground-name">Campground Name</label></strong>
					<input class="form-control" type="text" placeholder="Enter campground name" name="name">
				</div>
				<div class="form-group">
					<strong><label for="image">Image</label></strong>
					<input class="form-control" type="text" placeholder="Image src link" name="image">
				</div>
				<div class="form-group">
					<strong><label for="description">Description</label></strong>
					<input class="form-control" type="text" placeholder="Description of campground" name="description">
				</div>
				<div class="form-group">
					<strong><label for="location">Location</label></strong>
					<input class="form-control" type="text" name="Enter location" id="location"
						placeholder="Yosemite National Park, CA">
				</div>
				<div class="form-group">
					<strong><label for="price">Price</label></strong>
					<input class="form-control" type="number" placeholder="Price per night" name="price" min="0.01" step="0.01">
				</div>
				<div class="form-group">
					<button class="btn btn-primary btn-lg btn-block">Submit</button>
				</div>
			</form>
			<a href="/campgrounds">Back to all Campgrounds</a>
		</div>
	</div>
</div>

<% include ../partials/footer %>